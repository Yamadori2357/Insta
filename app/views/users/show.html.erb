<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <section class="stats">
      <%= render 'shared/stats' %>
      </section>
      <%= link_to "ログアウト", logout_path, method: :delete %>
      <%= link_to "プロフィール編集ページ", edit_user_path(@user) %>
      <%= link_to "パスワード変更ページ",  password_edit_user_path(@user) %>
    </section>
  </aside>
</div>